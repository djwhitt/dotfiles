#!/usr/bin/env bash

while true; do
  source=$(pamixer --list-sources | awk '/alsa_input.usb-Blue_Microphones_Yeti/ { print $1 }')
  if [ -n "$source" ]; then
    status=$(pamixer --source "${source}" --get-mute 2> /dev/null)
    if [ "${status}" = "true" ]; then
      volume=$(pamixer --source "${source}" --get-volume 2> /dev/null)
      echo "#FFFFFF"
      echo "MIC ${volume}"
    else
      echo "#FFFF00"
      echo "MUTED"
    fi
  else
    echo
  fi
  sleep 1
done
